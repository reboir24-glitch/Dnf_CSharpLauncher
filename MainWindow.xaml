<Window x:Class="DFOLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DFO Launcher" Height="900" Width="1550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True">

    <Window.Resources>
        <!-- Pulsing Glow Animation for Logo -->
        <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                             From="0.4" To="0.9" Duration="0:0:1.5" AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Button Scale Animation Style -->
        <Style x:Key="AnimatedButton" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1.03" Duration="0:0:0.15"/>
                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1.03" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1" Duration="0:0:0.15"/>
                            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Modern ListBox Item Style -->
        <Style x:Key="ModernListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#20ffffff"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30DC2626"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Glassmorphism Panel Style -->
        <Style x:Key="GlassPanel" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#15ffffff"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#30ffffff" Offset="0"/>
                        <GradientStop Color="#10ffffff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
    </Window.Resources>

    <!-- Outer container allowing content to bleed outside -->
    <Grid Margin="50,50,300,50">
        <!-- Drop shadow for main window -->
        <Border CornerRadius="15" Background="#0a0a0f" Margin="50,50,150,50">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="50" ShadowDepth="0" Opacity="0.8"/>
            </Border.Effect>
        </Border>

        <!-- Main Window -->
        <Border x:Name="MainBorder" CornerRadius="15" Background="#0a0a0f"
                BorderBrush="#1a1a24" BorderThickness="1" Margin="50,50,150,50" ClipToBounds="False">

            <Grid ClipToBounds="False">
                <!-- Background gradient -->
                <Rectangle RadiusX="15" RadiusY="15">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0a0a0f" Offset="0"/>
                            <GradientStop Color="#12141c" Offset="0.5"/>
                            <GradientStop Color="#1a0a0a" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- Animated background particles effect -->
                <Canvas x:Name="ParticleCanvas" IsHitTestVisible="False" Opacity="0.3"/>


                <!-- Title Bar -->
                <Grid Height="45" VerticalAlignment="Top" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                        <Ellipse Width="10" Height="10" Fill="#DC2626" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#DC2626" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="DUNGEON FIGHTER ONLINE" Foreground="#6b7280"
                                   FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <!-- Settings Button -->
                        <Button Content="&#x2699;" Width="40" Height="30" Click="SettingsBtn_Click"
                                Background="Transparent" Foreground="#6b7280"
                                BorderThickness="0" FontSize="16" Cursor="Hand" ToolTip="Settings"/>
                        <Button Content="&#x2212;" Width="40" Height="30" Click="MinimizeBtn_Click"
                                Background="Transparent" Foreground="#6b7280"
                                BorderThickness="0" FontSize="18" Cursor="Hand" FontWeight="Bold"/>
                        <Button Content="&#x2715;" Width="40" Height="30" Click="CloseBtn_Click"
                                Background="Transparent" Foreground="#6b7280"
                                BorderThickness="0" FontSize="12" Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <!-- Main Content Area -->
                <Grid Margin="0,45,0,0">
                    <!-- Login Screen -->
                    <Grid x:Name="LoginScreen" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel - Login Form with Glassmorphism -->
                        <Border Grid.Column="0" Margin="329,68,329,67" Style="{StaticResource GlassPanel}" Grid.ColumnSpan="2">
                            <StackPanel Margin="30,25,30,25" VerticalAlignment="Center">
                                <!-- Animated Logo -->
                                <TextBlock x:Name="LogoText" Text="DFO" FontSize="42" FontWeight="Bold" Foreground="White" Margin="0,0,0,-5">
                                    <TextBlock.Effect>
                                        <DropShadowEffect x:Name="LogoGlow" Color="#DC2626" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                                    </TextBlock.Effect>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="LogoGlow"
                                                                     Storyboard.TargetProperty="BlurRadius"
                                                                     From="30" To="50" Duration="0:0:1.5" AutoReverse="True">
                                                        <DoubleAnimation.EasingFunction>
                                                            <SineEase EasingMode="EaseInOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetName="LogoGlow"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     From="0.5" To="0.9" Duration="0:0:1.5" AutoReverse="True">
                                                        <DoubleAnimation.EasingFunction>
                                                            <SineEase EasingMode="EaseInOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>
                                <TextBlock Text="LAUNCHER" FontSize="12" Foreground="#DC2626" FontWeight="SemiBold"
                                           Margin="2,0,0,15" />

                                <!-- Welcome -->
                                <TextBlock Text="Welcome back, Fighter" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="Sign in to continue your adventure" FontSize="11" Foreground="#6b7280" Margin="0,3,0,18"/>

                                <!-- Username -->
                                <TextBlock Text="USERNAME" FontSize="9" Foreground="#6b7280" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="UsernameBox" Style="{StaticResource ModernTextBox}" Height="38"/>

                                <!-- Password -->
                                <TextBlock Text="PASSWORD" FontSize="9" Foreground="#6b7280" FontWeight="SemiBold" Margin="0,12,0,5"/>
                                <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBox}" Height="38"/>

                                <!-- Remember Me -->
                                <CheckBox x:Name="RememberCheckBox" Content="Remember me" Style="{StaticResource ModernCheckBox}" Margin="0,12,0,0"/>

                                <!-- Login Button with Animation -->
                                <Button Content="SIGN IN" Style="{StaticResource AnimatedButton}"
                                        Height="40" Margin="0,18,0,0" Click="LoginBtn_Click"
                                        Background="#DC2626" Foreground="White" FontSize="13" FontWeight="SemiBold"
                                        BorderThickness="0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="8"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="btnScale" ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <Border.Effect>
                                                    <DropShadowEffect x:Name="btnGlow" Color="#DC2626" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <EventTrigger RoutedEvent="MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="btnScale" Storyboard.TargetProperty="ScaleX"
                                                                             To="1.02" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="btnScale" Storyboard.TargetProperty="ScaleY"
                                                                             To="1.02" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="btnGlow" Storyboard.TargetProperty="BlurRadius"
                                                                             To="35" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="btnGlow" Storyboard.TargetProperty="Opacity"
                                                                             To="0.7" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="btnScale" Storyboard.TargetProperty="ScaleX"
                                                                             To="1" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="btnScale" Storyboard.TargetProperty="ScaleY"
                                                                             To="1" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="btnGlow" Storyboard.TargetProperty="BlurRadius"
                                                                             To="20" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="btnGlow" Storyboard.TargetProperty="Opacity"
                                                                             To="0.4" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Divider -->
                                <Grid Margin="0,12,0,12">
                                    <Rectangle Height="1" Fill="#2d3241"/>
                                    <Border Background="Transparent" Padding="12,0" HorizontalAlignment="Center">
                                        <Border Background="#12141c" Padding="8,2" CornerRadius="4">
                                            <TextBlock Text="OR" FontSize="9" Foreground="#6b7280"/>
                                        </Border>
                                    </Border>
                                </Grid>

                                <!-- Register Button with Animation -->
                                <Button Content="CREATE ACCOUNT" Style="{StaticResource AnimatedButton}"
                                        Height="38" Click="RegisterBtn_Click"
                                        Background="#202430" Foreground="White" FontSize="12"
                                        BorderThickness="0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="regBorder" Background="{TemplateBinding Background}" CornerRadius="10"
                                                    RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform x:Name="regScale" ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <EventTrigger RoutedEvent="MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="regScale" Storyboard.TargetProperty="ScaleX"
                                                                             To="1.02" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="regScale" Storyboard.TargetProperty="ScaleY"
                                                                             To="1.02" Duration="0:0:0.15"/>
                                                            <ColorAnimation Storyboard.TargetName="regBorder"
                                                                            Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                                            To="#2a3040" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="regScale" Storyboard.TargetProperty="ScaleX"
                                                                             To="1" Duration="0:0:0.15"/>
                                                            <DoubleAnimation Storyboard.TargetName="regScale" Storyboard.TargetProperty="ScaleY"
                                                                             To="1" Duration="0:0:0.15"/>
                                                            <ColorAnimation Storyboard.TargetName="regBorder"
                                                                            Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                                            To="#202430" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Right Panel - News Section with Glassmorphism -->
                    </Grid>

                    <!-- Dashboard Screen -->
                    <Grid x:Name="DashboardScreen" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel - Dashboard with Glassmorphism -->
                        <Border Grid.Column="0" Margin="40,50,20,85" Style="{StaticResource GlassPanel}">
                            <Grid Margin="25,20,25,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <StackPanel Grid.Row="0">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="READY TO FIGHT" FontSize="11" Foreground="#DC2626" FontWeight="SemiBold" />
                                            <TextBlock x:Name="WelcomeText" Text="Welcome back!" FontSize="22" Foreground="White" FontWeight="Bold" Margin="0,5,0,0"/>
                                        </StackPanel>
                                        <Button x:Name="RefreshBtn" Content="&#x21BB;" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Width="35" Height="35" Background="#1f2937" Foreground="#9ca3af"
                                                BorderThickness="0" FontSize="16" Cursor="Hand" Click="RefreshBtn_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="refBorder" Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="refBorder" Property="Background" Value="#2a3545"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>

                                    <!-- CERA Display -->
                                    <Border Background="#20ffffff" CornerRadius="10" Padding="15,12" Margin="0,15,0,0">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#DC2626" CornerRadius="6" Padding="8,4" VerticalAlignment="Center">
                                                    <TextBlock Text="CERA" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                                </Border>
                                                <TextBlock x:Name="CeraDisplay" Text="0" FontSize="20" Foreground="White"
                                                           FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <TextBlock Text="CERA" HorizontalAlignment="Right" VerticalAlignment="Center"
                                                       Foreground="#6b7280" FontSize="11"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Characters Section -->
                                <Border Grid.Row="1" Background="#15000000" CornerRadius="10" Margin="0,15,0,15" Padding="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                                            <TextBlock Text="&#x2726;" Foreground="#DC2626" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="YOUR CHARACTERS" FontSize="11" Foreground="#6b7280" FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <ListBox x:Name="CharacterList" Grid.Row="1" Style="{StaticResource ModernListBox}"
                                                 ItemContainerStyle="{StaticResource ModernListBoxItem}" Background="#0a0a0f">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="32"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Border Background="#DC2626" CornerRadius="4" Padding="4,2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                            <TextBlock Text="{Binding Level}" Foreground="White" FontWeight="Bold" FontSize="9"/>
                                                        </Border>
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0">
                                                            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                                            <TextBlock Text="{Binding Job}" Foreground="#6b7280" FontSize="9"/>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="2" Text="{Binding GoldDisplay}" Foreground="#FBBF24"
                                                                   FontWeight="SemiBold" VerticalAlignment="Center" FontSize="10"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                        <!-- Currency Transfer - Compact -->
                                        <Grid Grid.Row="2" Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="AmountBox" Style="{StaticResource ModernTextBox}" Height="32"/>
                                            <Button Grid.Column="1" Content="ðŸ’°" Width="32" Height="32" Margin="5,0,0,0"
                                                    Background="#FBBF24" Foreground="#000" BorderThickness="0"
                                                    FontSize="14" Cursor="Hand" Click="SendGoldBtn_Click" ToolTip="Send Gold">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="gb" Background="{TemplateBinding Background}" CornerRadius="6">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="gb" Property="Background" Value="#FCD34D"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Grid.Column="2" Content="ðŸ’Ž" Width="32" Height="32" Margin="5,0,0,0"
                                                    Background="#DC2626" Foreground="White" BorderThickness="0"
                                                    FontSize="14" Cursor="Hand" Click="SendCeraBtn_Click" ToolTip="Send CERA">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="cb" Background="{TemplateBinding Background}" CornerRadius="6">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="cb" Property="Background" Value="#EF4444"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- Bottom Buttons -->
                                <StackPanel Grid.Row="2">
                                    <!-- PLAY Button with Animation -->
                                    <Button x:Name="PlayBtn" Height="60" Click="PlayBtn_Click" Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="playBorder" CornerRadius="12" RenderTransformOrigin="0.5,0.5">
                                                    <Border.RenderTransform>
                                                        <ScaleTransform x:Name="playScale" ScaleX="1" ScaleY="1"/>
                                                    </Border.RenderTransform>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#DC2626" Offset="0"/>
                                                            <GradientStop Color="#B91C1C" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Effect>
                                                        <DropShadowEffect x:Name="playGlow" Color="#DC2626" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
                                                    </Border.Effect>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="&#x25B6;" FontSize="18" Foreground="White" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="PLAY" FontSize="20" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="playScale" Storyboard.TargetProperty="ScaleX"
                                                                                 To="1.03" Duration="0:0:0.15"/>
                                                                <DoubleAnimation Storyboard.TargetName="playScale" Storyboard.TargetProperty="ScaleY"
                                                                                 To="1.03" Duration="0:0:0.15"/>
                                                                <DoubleAnimation Storyboard.TargetName="playGlow" Storyboard.TargetProperty="BlurRadius"
                                                                                 To="40" Duration="0:0:0.15"/>
                                                                <DoubleAnimation Storyboard.TargetName="playGlow" Storyboard.TargetProperty="Opacity"
                                                                                 To="0.8" Duration="0:0:0.15"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="playScale" Storyboard.TargetProperty="ScaleX"
                                                                                 To="1" Duration="0:0:0.15"/>
                                                                <DoubleAnimation Storyboard.TargetName="playScale" Storyboard.TargetProperty="ScaleY"
                                                                                 To="1" Duration="0:0:0.15"/>
                                                                <DoubleAnimation Storyboard.TargetName="playGlow" Storyboard.TargetProperty="BlurRadius"
                                                                                 To="25" Duration="0:0:0.15"/>
                                                                <DoubleAnimation Storyboard.TargetName="playGlow" Storyboard.TargetProperty="Opacity"
                                                                                 To="0.5" Duration="0:0:0.15"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Logout -->
                                    <Button Content="Switch Account" Background="Transparent" Foreground="#6b7280"
                                            BorderThickness="0" Height="35" Margin="0,10,0,0" Cursor="Hand"
                                            Click="LogoutBtn_Click" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Right Panel - Character Tools -->
                        <Border Grid.Column="1" Margin="20,50,40,85" Style="{StaticResource GlassPanel}" HorizontalAlignment="Left" Width="380">
                            <Grid Margin="20,15,20,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
                                    <TextBlock Text="âš”" FontSize="14" Foreground="#DC2626" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="CHARACTER TOOLS" FontSize="11" Foreground="#DC2626" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Character Stats -->
                                <Border Grid.Row="1" Background="#15000000" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- HP -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                                            <TextBlock Text="HP" FontSize="9" Foreground="#6b7280"/>
                                            <TextBlock x:Name="StatHP" Text="0" FontSize="14" Foreground="#EF4444" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <!-- MP -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                                            <TextBlock Text="MP" FontSize="9" Foreground="#6b7280"/>
                                            <TextBlock x:Name="StatMP" Text="0" FontSize="14" Foreground="#3B82F6" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <!-- PHY ATK -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                                            <TextBlock Text="PHY ATK" FontSize="9" Foreground="#6b7280"/>
                                            <TextBlock x:Name="StatPhyAtk" Text="0" FontSize="14" Foreground="#F97316" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <!-- MAG ATK -->
                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,8">
                                            <TextBlock Text="MAG ATK" FontSize="9" Foreground="#6b7280"/>
                                            <TextBlock x:Name="StatMagAtk" Text="0" FontSize="14" Foreground="#A855F7" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <!-- Fatigue -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,8">
                                            <TextBlock Text="FATIGUE" FontSize="9" Foreground="#6b7280"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock x:Name="StatFatigue" Text="0/156" FontSize="14" Foreground="#10B981" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <!-- Last Played -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                            <TextBlock Text="LAST PLAYED" FontSize="9" Foreground="#6b7280"/>
                                            <TextBlock x:Name="StatLastPlayed" Text="Never" FontSize="12" Foreground="#94A3B8"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Gold Packages & Tools -->
                                <Border Grid.Row="3" Background="#15000000" CornerRadius="8" Padding="10">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <!-- Gold Packages -->
                                            <TextBlock Text="GOLD PACKAGES" FontSize="9" Foreground="#6b7280" Margin="0,0,0,6"/>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Button Content="1M" Grid.Column="0" Height="28" Margin="0,0,3,0"
                                                        Background="#FBBF24" Foreground="#000" BorderThickness="0"
                                                        FontSize="10" FontWeight="Bold" Cursor="Hand" Click="Gold1MBtn_Click">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="g1b" Background="{TemplateBinding Background}" CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="g1b" Property="Background" Value="#FCD34D"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Content="10M" Grid.Column="1" Height="28" Margin="3,0,3,0"
                                                        Background="#F59E0B" Foreground="#000" BorderThickness="0"
                                                        FontSize="10" FontWeight="Bold" Cursor="Hand" Click="Gold10MBtn_Click">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="g10b" Background="{TemplateBinding Background}" CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="g10b" Property="Background" Value="#FBBF24"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Content="100M" Grid.Column="2" Height="28" Margin="3,0,0,0"
                                                        Background="#D97706" Foreground="#FFF" BorderThickness="0"
                                                        FontSize="10" FontWeight="Bold" Cursor="Hand" Click="Gold100MBtn_Click">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="g100b" Background="{TemplateBinding Background}" CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="g100b" Property="Background" Value="#F59E0B"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>

                                            <!-- Level Editor -->
                                            <TextBlock Text="LEVEL EDITOR" FontSize="9" Foreground="#6b7280" Margin="0,0,0,4"/>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="LevelBox" Style="{StaticResource ModernTextBox}" Height="28" Text="95"/>
                                                <Button Grid.Column="1" Content="SET" Width="45" Height="28" Margin="5,0,0,0"
                                                        Background="#6366F1" Foreground="White" BorderThickness="0"
                                                        FontSize="9" FontWeight="Bold" Cursor="Hand" Click="SetLevelBtn_Click">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="lb" Background="{TemplateBinding Background}" CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="lb" Property="Background" Value="#818CF8"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>

                                            <!-- Send Item -->
                                            <TextBlock Text="SEND ITEM" FontSize="9" Foreground="#6b7280" Margin="0,0,0,4"/>
                                            <Grid Margin="0,0,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="ItemIdBox" Style="{StaticResource ModernTextBox}" Height="28"/>
                                                <TextBox x:Name="ItemQtyBox" Grid.Column="1" Style="{StaticResource ModernTextBox}" Height="28" Margin="5,0,0,0" Text="1"/>
                                                <Button Grid.Column="2" Content="ðŸ“¦" Width="35" Height="28" Margin="5,0,0,0"
                                                        Background="#059669" Foreground="White" BorderThickness="0"
                                                        FontSize="12" Cursor="Hand" Click="SendItemBtn_Click" ToolTip="Send Item">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="sib" Background="{TemplateBinding Background}" CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="sib" Property="Background" Value="#10B981"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Status Bar with Server Status -->
                <Border Height="40" VerticalAlignment="Bottom" Background="#0d0d12" CornerRadius="0,0,15,15">
                    <Grid Margin="20,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Server Status Indicator -->
                            <Border Background="#1a1a24" CornerRadius="10" Padding="10,4" Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="ServerDot" Width="8" Height="8" Fill="#6b7280" Margin="0,0,8,0">
                                        <Ellipse.Effect>
                                            <DropShadowEffect x:Name="ServerGlow" Color="#6b7280" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock x:Name="ServerStatus" Text="Checking..." FontSize="10" Foreground="#6b7280" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#6b7280" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" Text="Ready to connect..." FontSize="11" Foreground="#6b7280" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock x:Name="PingText" Text="" FontSize="10" Foreground="#6b7280" Margin="0,0,15,0"/>
                            <TextBlock Text="v2.0.0" Foreground="#4b5563" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Character Image - Bleeds outside the window -->
        <Image Source="assets/Berserker.png"
               HorizontalAlignment="Right" VerticalAlignment="Bottom"
               Width="216" Margin="0,0,126,84"
               IsHitTestVisible="False"
               RenderOptions.BitmapScalingMode="HighQuality" Height="302">
            <Image.Effect>
                <DropShadowEffect Color="#DC2626" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
            </Image.Effect>
        </Image>

        <!-- Settings Panel Overlay -->
        <Border x:Name="SettingsOverlay" Visibility="Collapsed" Background="#CC000000" CornerRadius="15" Margin="50,50,150,50">
            <Border Background="#12141c" CornerRadius="15" Width="400" Height="350"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="#2d3241" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Settings Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Settings" FontSize="22" Foreground="White" FontWeight="Bold"/>
                        <Button Content="&#x2715;" HorizontalAlignment="Right" Click="CloseSettings_Click"
                                Background="Transparent" Foreground="#6b7280" BorderThickness="0"
                                FontSize="14" Cursor="Hand" Width="30" Height="30"/>
                    </Grid>

                    <!-- Settings Content -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="GAME PATH" FontSize="10" Foreground="#6b7280" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="GamePathBox" Style="{StaticResource ModernTextBox}" Height="40"
                                     Text="DNF.exe" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="Browse" Width="80" Height="40" Margin="10,0,0,0"
                                    Click="BrowseGamePath_Click" Background="#DC2626" Foreground="White"
                                    BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Text="SERVER" FontSize="10" Foreground="#6b7280" FontWeight="SemiBold" Margin="0,20,0,8"/>
                        <TextBox x:Name="ServerBox" Style="{StaticResource ModernTextBox}" Height="40"
                                 Text="192.168.200.131"/>
                    </StackPanel>

                    <!-- Save Button -->
                    <Button Grid.Row="2" Content="SAVE SETTINGS" Height="45" Margin="0,20,0,0"
                            Click="SaveSettings_Click" Background="#10B981" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#10B981" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Visibility="Collapsed" Background="#E5000000" CornerRadius="15" Margin="50,50,150,50">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText" Text="Signing in..." FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                <Border Background="#1f2937" CornerRadius="4" Width="200" Height="4" Margin="0,20,0,0">
                    <Border Background="#DC2626" CornerRadius="4" HorizontalAlignment="Left">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         From="0" To="200" Duration="0:0:1.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
